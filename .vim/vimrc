syntax on
filetype plugin indent on

let $RTP=split(&runtimepath, ',')[0]
let $RC="~/.vim/vimrc"
let mapleader = " "

set shiftwidth=4 
set tabstop=4
set softtabstop=4 
set expandtab 
set autoindent 
set smartindent
set exrc
set nocompatible
set backspace=indent,eol,start
set hidden
set hidden
set nowrap
set path=.,**
set nu
set relativenumber
set completeopt=menuone,noinsert,noselect
set spell
set nohlsearch
set scrolloff=8
set colorcolumn=80
set signcolumn=yes
set cmdheight=2
set updatetime=50
set guicursor=
set shortmess+=c
set encoding=UTF-8
set mouse=a
set background=dark
set completeopt=longest,menuone
set nospell
set omnifunc=syntaxcomplete#Complete
set termguicolors

colorscheme gruvbox
nnoremap <leader>n :NERDTreeFocus<CR>
nnoremap <C-n> :NERDTree<CR>
nnoremap <C-t> :NERDTreeToggle<CR>
nnoremap <C-f> :NERDTreeFind<CR>
hi Normal guibg=NONE ctermbg=NONE
